
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title> <%= @merchant.name %> </title>
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link href="/stylesheets/main.css" type="text/css" rel="stylesheet">
  </head>
  <body>
    <header>
      <h1> <%= @merchant.name %> </h1>
    </header>
    <nav>
      <div class="navlinks">
        <div class="dropdown">
          <button name="Merchants">Merchants</button>
            <div class="dropdown-content">
              <a href="/merchants">Marketplace</a>
              <a href="/merchants/new">Create New Merchant</a>
              <a href="/merchants-dashboard">Merchants Dashboard</a>
            </div>
        </div>
        <div class="dropdown">
          <button name="Items">Items</button>
            <div class="dropdown-content">
              <a href="/items">Inventory</a>
              <a href="/items/new">Create New Item</a>
              <a href="/items-dashboard">Items Dashboard</a>
            </div>
        </div>
        <div class="dropdown">
          <button name="Categories">Categories</button>
            <div class="dropdown-content">
              <a href="/categories">Browse By Category</a>
              <a href="/categories/new">Create New Category</a>
              <a href="/categories-dashboard">Categories Dashboard</a>
            </div>
      </div>
      </div>
      <div class="search_bar">
        <form action="/search" method="GET">
          <input type="text" placeholder="Search.." name="q">
          <button type="submit">Submit</button>
        </form>
      </div>
    </nav>
    <section class="show">
      <h2>This merchant has <%= @merchant.total_items %> items</h2>
      <div class="merchantsitems">
        <% @merchant.items.each do |item| %>
        <div class="merchantitem">
          <a href="/items/<%= item.id %> "><%= item.title %></a>
          <img class="itemimage" src="<%= item.image %>">
        </div>
        <% end %>
      </div>
      <div class="modify">
        <a class="buttons" href="/merchants/<%= @merchant.id  %>/edit">Edit Merchant</a>

        <form action="/merchants/<%= @merchant.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input class="buttons" type="submit" value="Delete Merchant"/>
        </form>
      </div>
      <footer class="back">
        <a href="/merchants">Back to Marketplace</a>
      </footer>
    </section>
  </body>
</html>
